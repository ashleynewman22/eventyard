<h1>Cart Details</h1>

<div class="cart-details">
  <h2><%= @cart.item.name %></h2>
  <p>Price: <%= number_to_currency(@cart.item.price) %></p>
  <p>From: <%= @cart.start_date %> to <%= @cart.end_date %></p>
  <p>Total: <%= number_to_currency(@cart.total_price) %></p>
  <p>Status: <%= @cart.status %></p>
</div>

<% if @cart.status == 'pending_approval' %>
  <p>Your order is pending approval from the item owner.</p>
<% elsif @cart.status == 'approved' %>
  <p>Your order has been approved. Payment will be cash on delivery.</p>
<% else %>
  <%= button_to 'Checkout', checkout_cart_path(@cart), method: :post, class: 'checkout-button' %>
<% end %>

<%= link_to 'Back to Cart', carts_path %>
