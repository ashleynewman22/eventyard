<div class="container mb-3">
<%= simple_form_for([@item, @cart], html: { class: 'form-inline' }) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :start_date, class: 'form-label' %>
    <%= f.date_field :start_date, class: 'form-control me-2', placeholder: 'Select start date' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :end_date, class: 'form-label' %>
    <%= f.date_field :end_date, class: 'form-control me-2', placeholder: 'Select end date' %>
  </div>
  <div class="form-group mb-3">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
